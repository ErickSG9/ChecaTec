<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test.Views.LoginPage"
             BackgroundColor="#eff6ff">

    <Grid>
        <!-- Fondo de logo -->
        <Image Source="logoa.png"
               Aspect="AspectFill"
               Opacity="0.08"
               IsVisible="True"
               Grid.RowSpan="1" />

        <ScrollView>
            <StackLayout Padding="30" Spacing="20" VerticalOptions="CenterAndExpand">

                <!-- Título -->
                <Label Text="ChecaTec"
                       FontSize="35"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="Black"/>

                <!-- Correo -->
                <Label Text="Correo electrónico"
                       FontSize="20"
                       TextColor="Black"/>
                <Frame CornerRadius="15" Padding="5" HasShadow="False" BorderColor="Black">
                    <Entry x:Name="entryUsuario"
                           Keyboard="Email"
                           TextColor="Black"
                           BackgroundColor="Transparent" />
                </Frame>

                <!-- Contraseña -->
                <Label Text="Contraseña"
                       FontSize="20"
                       TextColor="Black"/>
                <Frame CornerRadius="15" Padding="5" HasShadow="False" BorderColor="Black">
                    <Grid>
                        <Entry x:Name="entryContrasena"
                               IsPassword="True"
                               TextColor="Black"
                               BackgroundColor="Transparent"
                               HorizontalOptions="FillAndExpand"/>
                        <Button x:Name="btnMostrarContrasena"
                                Text="👁️"
                                BackgroundColor="Transparent"
                                HorizontalOptions="End"
                                VerticalOptions="Center"
                                WidthRequest="40"
                                HeightRequest="40"
                                Clicked="MostrarOcultarContrasena_Clicked"/>
                    </Grid>
                </Frame>

                <!-- Botón Iniciar sesión -->
                <Button Text="Iniciar sesión"
                        BackgroundColor="#007AFF"
                        TextColor="White"
                        CornerRadius="15"
                        Clicked="IniciarSesion_Clicked"/>

                <!-- Botón Registrarse -->
                <Button Text="Registrarse"
                        BackgroundColor="#007AFF"
                        TextColor="White"
                        CornerRadius="15"
                        Clicked="IrARegistro_Clicked"/>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>