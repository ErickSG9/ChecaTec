<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test.RecetaPage"
             Title="Receta Médica"
             BackgroundColor="White">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <!-- Encabezado de la receta -->
            <Label Text="RECETA MÉDICA"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Label Text="Dr. Juan Ramírez" FontSize="18" />
            <Label Text="Fecha: 15/03/2025" FontSize="14" TextColor="Gray" />

            <!-- Lista de medicamentos -->
            <Frame BorderColor="Black" CornerRadius="15" Padding="15">
                <StackLayout Spacing="10">

                    <!-- Medicamento 1 -->
                    <StackLayout>
                        <Label Text="• Paracetamol" FontAttributes="Bold"/>
                        <Label Text="Dosis: 500 mg"/>
                        <Label Text="Frecuencia: Cada 8 horas por 5 días"/>
                    </StackLayout>

                    <!-- Medicamento 2 -->
                    <StackLayout>
                        <Label Text="• Amoxicilina" FontAttributes="Bold"/>
                        <Label Text="Dosis: 250 mg"/>
                        <Label Text="Frecuencia: Cada 12 horas por 7 días"/>
                    </StackLayout>

                    <!-- Medicamento 3 -->
                    <StackLayout>
                        <Label Text="• Ibuprofeno" FontAttributes="Bold"/>
                        <Label Text="Dosis: 400 mg"/>
                        <Label Text="Frecuencia: Solo si hay dolor, cada 8 horas"/>
                    </StackLayout>

                </StackLayout>
            </Frame>

            <!-- Firma o aclaraciones -->
            <Label Text="* Tomar los medicamentos después de alimentos"
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalOptions="Center"/>
        </StackLayout>
    </ScrollView>
</ContentPage>