<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test.ExpedientePage"
             Title="Historial de Operaciones"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto, Auto, *">

        <!-- Botones MENSAJES y ESTADISTICAS -->
        <Grid Grid.Row="1" ColumnSpacing="0" RowSpacing="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" 
                    Text="HISTORIAL" 
                    Clicked="OnHistorialClicked"
                    BackgroundColor="White"
                    FontAttributes="Bold"
                    TextColor="Black"
                    BorderColor="Black"
                    BorderWidth="1"/>

            <Button Grid.Column="1" 
                    Text="ESTADISTICAS" 
                    Clicked="OnEstadisticasClicked"
                    BackgroundColor="White"
                    FontAttributes="Bold"
                    TextColor="Black"
                    BorderColor="Black"
                    BorderWidth="1"/>
        </Grid>

        <!-- Contenido debajo de los botones (vacío por ahora) -->
        <StackLayout Grid.Row="2" Padding="10" Spacing="20">
            <!-- Operación 1 -->
            <Frame CornerRadius="15" BorderColor="Black" Padding="15">
                <StackLayout Spacing="10">
                    <Label Text="Operación - 12/03/2024" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center"/>
                    <Label Text="Tipo: Apendicectomía"/>
                    <Label Text="Paciente: Ana Rodríguez"/>
                    <Label Text="Cirujano: Dr. Luis Ramírez"/>
                    <Label Text="Hora: 08:15 AM"/>
                    <Label Text="Quirófano: Sala 2"/>
                    <Label Text="Estado: Finalizada"/>

                    <Label Text="Observaciones:" FontAttributes="Bold" Margin="0,10,0,0"/>
                    <Label Text="Paciente respondió favorablemente. Sin complicaciones." 
                 FontAttributes="Italic"
                 TextColor="Gray"/>
                </StackLayout>
            </Frame>

            <!-- Operación 2 -->
            <Frame CornerRadius="15" BorderColor="Black" Padding="15">
                <StackLayout Spacing="10">
                    <Label Text="Operación - 25/11/2023" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center"/>
                    <Label Text="Tipo: Cirugía de vesícula"/>
                    <Label Text="Paciente: Ana Rodríguez"/>
                    <Label Text="Cirujano: Dra. María Torres"/>
                    <Label Text="Hora: 03:00 PM"/>
                    <Label Text="Quirófano: Sala 1"/>
                    <Label Text="Estado: Finalizada"/>

                    <Label Text="Observaciones:" FontAttributes="Bold" Margin="0,10,0,0"/>
                    <Label Text="Hubo leve sangrado, controlado exitosamente. Recuperación rápida." 
                 FontAttributes="Italic"
                 TextColor="Gray"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </Grid>
</ContentPage>
