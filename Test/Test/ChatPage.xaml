<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Test.Converters"
             x:Class="Test.ChatPage"
             Title="Chat"
             BackgroundColor="#eff6ff">

    <AbsoluteLayout>

        <!-- Fondo de logo -->
        <Image Source="logoa.png"
               Aspect="AspectFill"
               Opacity="0.08"
               AbsoluteLayout.LayoutBounds="0,0,1,1"
               AbsoluteLayout.LayoutFlags="All" />

        <!-- Contenido del chat -->
        <StackLayout Padding="15" Spacing="10"
                     AbsoluteLayout.LayoutBounds="0,0,1,1"
                     AbsoluteLayout.LayoutFlags="All">

            <!-- Título del chat -->
            <Label x:Name="TituloChat"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black" />

            <!-- Lista de mensajes -->
            <ListView x:Name="MensajesListView"
                      HasUnevenRows="True"
                      SeparatorVisibility="None"
                      BackgroundColor="Transparent">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame CornerRadius="10"
                                   BackgroundColor="White"
                                   BorderColor="#ccc"
                                   Padding="10"
                                   Margin="5">
                                <StackLayout>
                                    <Label Text="{Binding Mensaje}"
                                           FontSize="16"
                                           TextColor="Black" />
                                    <Label Text="{Binding FechaEnvio}"
                                           FontSize="12"
                                           TextColor="Gray" />
                                </StackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Caja de entrada -->
            <Grid Padding="5"
                  ColumnDefinitions="*,Auto"
                  VerticalOptions="End">
                <Frame CornerRadius="15"
                       BorderColor="Black"
                       Padding="5"
                       HasShadow="False"
                       BackgroundColor="White">
                    <Entry x:Name="MensajeEntry"
                           Placeholder="Escribe tu mensaje..."
                           BackgroundColor="Transparent"
                           TextColor="Black" />
                </Frame>
                <Button Grid.Column="1"
                        Text="Enviar"
                        BackgroundColor="#007AFF"
                        TextColor="White"
                        Clicked="Enviar_Clicked"
                        CornerRadius="15"
                        Margin="5,0,0,0"/>
            </Grid>
        </StackLayout>
    </AbsoluteLayout>
</ContentPage>
