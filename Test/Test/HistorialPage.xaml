<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test.HistorialPage"
             Title="Historial de Operaciones"
             BackgroundColor="White">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Inicio"
                     Priority="0"
                     Order="Primary"
                     Clicked="OnMainClicked" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto, Auto, *">

        <!-- Botones HISTORIAL y ESTADISTICAS -->
        <Grid Grid.Row="1" ColumnSpacing="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Text="HISTORIAL"
                    BackgroundColor="White"
                    FontAttributes="Bold"
                    TextColor="Black"
                    BorderColor="Black"
                    BorderWidth="1" />

            <Button Grid.Column="1"
                    Text="ESTADISTICAS"
                    Clicked="OnEstadisticasClicked"
                    BackgroundColor="White"
                    FontAttributes="Bold"
                    TextColor="Black"
                    BorderColor="Black"
                    BorderWidth="1" />
        </Grid>

        <!-- Lista de operaciones dinámicas -->
        <CollectionView x:Name="ListaOperaciones" Grid.Row="2">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="15" BorderColor="Black" Padding="15" Margin="10">
                        <StackLayout Spacing="10">
                            <Label Text="{Binding Fecha, StringFormat='Operación - {0:dd/MM/yyyy}'}"
                                   FontAttributes="Bold"
                                   FontSize="18"
                                   HorizontalOptions="Center"/>
                            <Label Text="{Binding Tipo, StringFormat='Tipo: {0}'}"/>
                            <Label Text="{Binding Cirujano, StringFormat='Cirujano: {0}'}"/>
                            <Label Text="{Binding Hora, StringFormat='Hora: {0}'}"/>
                            <Label Text="{Binding Quirofano, StringFormat='Quirófano: {0}'}"/>
                            <Label Text="{Binding Estado, StringFormat='Estado: {0}'}"/>

                            <Label Text="Observaciones:" FontAttributes="Bold" Margin="0,10,0,0"/>
                            <Label Text="{Binding Observaciones}" FontAttributes="Italic" TextColor="Gray"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Nuevo"
        BackgroundColor="#007AFF"
        TextColor="White"
        CornerRadius="10"
        Clicked="OnNuevoClicked"/>
    </Grid>
</ContentPage>
